<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="3dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="3dp"
    android:backgroundTint="@color/beige"
    android:elevation="25dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingTop="14dp"
            android:paddingEnd="10dp"
            android:paddingBottom="14dp">

            <TextView
                android:id="@+id/name_of_order_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/braun"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="BEDOEV COFFEE" />

            <TextView
                android:id="@+id/price_of_order_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="@color/light_braun"
                android:textSize="14sp"
                tools:text="1 km from you" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|end"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_minus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="6dp"
                android:background="@drawable/ic_minus_braun"/>

            <TextView
                android:id="@+id/count_of_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:fontFamily="@font/sf_ui_display_regular"
                android:textColor="@color/braun"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_plus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="6dp"
                android:background="@drawable/ic_plus_braun"/>
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>